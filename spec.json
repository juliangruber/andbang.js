    "visibility": "public",
    "params": [
      {
        "name": "teamId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      },
      {
        "name": "taskId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      }
    ],
    "apis": [
      {
        "type": "rest",
        "method": "POST",
