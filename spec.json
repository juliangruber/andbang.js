      {
        "name": "teamId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      },
      {
        "name": "taskId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      },
      {
        "name": "taskAttributes",
        "type": "object",
        "description": "Hash of task attributes to create a task",
        "required": true
      }
