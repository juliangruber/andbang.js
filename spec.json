{
  "updateUser": {
    "description": "Change user properties. These changes will propagate to the corresponding members",
    "authRequired": true,
    "visibility": "public",
    "params": [
      {
        "name": "userAttributes",
        "type": "object",
        "description": "Hash of new attributes",
        "required": true
      }
    ],
    "apis": [
      {
        "type": "rest",
        "method": "PUT",
        "path": "/users/{{userId}}"
      },
      {
        "type": "js"
      },
      {
        "type": "socket.io"
      }
    ]
  },
