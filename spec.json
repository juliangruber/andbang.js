        "type": "js"
      },
      {
        "type": "socket.io"
      }
    ]
  },
  "shipTask": {
    "description": "In And Bang we call completing a task \"shipping\". This method does that.",
    "authRequired": true,
    "visibility": "public",
    "permsRequired": [
      "onTeam",
      "myTask"
    ],
    "generatedEvents": [
      {
        "name": "shipTask",
        "payload": "All the new attributes of the shipped task.",
        "condition": "successfully shipping a task"
      }
    ],
    "params": [
      {
        "name": "teamId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      },
      {
        "name": "taskId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      }
    ],
    "apis": [
      {
        "type": "rest",
        "path": "/teams/{{teamId}}/tasks/{{taskId}}/ship",
        "method": "POST"
      },
      {
        "type": "socket.io"
      },
      {
        "type": "js"
      }
    ]
  }
