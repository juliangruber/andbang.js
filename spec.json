        "type": "socket.io"
      }
    ]
  },
  "assignTask": {
    "description": "Assigns a task to another team member.",
    "authRequired": true,
    "visibility": "public",
    "params": [
      {
        "name": "teamId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      },
      {
        "name": "taskId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      },
      {
        "name": "memberId",
        "type": "string",
        "description": "memberId of whom to assign task to.",
        "required": true
      }
    ],
    "apis": [
      {
        "type": "rest",
        "method": "POST",
        "path": "/teams/{{teamId}}/tasks/{{taskId}}/assign"
      },
      {
        "type": "js"
      },
      {
        "type": "socket.io"
      }
    ]
  },
