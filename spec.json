      },
      {
        "type": "js"
      },
      {
        "type": "socket.io"
      }
    ]
  },
  "deleteTask": {
    "description": "Deletes a task completely.",
    "authRequired": true,
    "visibility": "public",
    "params": [
      {
        "name": "teamId",
