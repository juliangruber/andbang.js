  "createTask": {
    "description": "Creates a new task.",
    "authRequired": true,
    "visibility": "public",
    "params": [
      {
        "name": "teamId",
        "type": "string",
        "description": "Team shortname or id.",
        "required": true
      },
      {
        "name": "taskAttributes",
        "type": "object",
        "description": "Hash of task attributes to create a task",
        "required": true
      }
    ],
    "apis": [
      {
        "type": "js"
      },
      {
        "type": "socket.io"
      }
    ]
  },
